<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_bank_view_tree" model="ir.ui.view">
		<field name="name">res,bank.view.tree</field>
		<field name="model">res.bank</field>
		<field name="inherit_id" ref="base.view_res_bank_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='bic']" position="after">
				<field name="code" />
			</xpath>
		</field>
	</record>


        <!-- Inherit Form View to Modify it -->
        <record id="res_bank_view_form" model="ir.ui.view"><!--Esta linea va el modelo que se va a intervenir  -->
            <field name="name">res.bank.view.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bic']" position="before">
                    <field name="code" />
                </xpath>

          </field>
        </record>


    </data>
</odoo>